  "devDependencies": {
    "@swc/core": "^1.7.26",
    "@swc/helpers": "^0.5.13",
    "@types/app-root-path": "^1.2.5",
    "@types/bcryptjs": "^2.4.6",
    "@types/body-parser": "^1.19.2",
    "@types/cors": "^2.8.13",
    "@types/dotenv-safe": "^8.1.2",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.3",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/morgan": "^1.9.4",
    "@types/node": "^20.4.5",
    "@types/swagger-ui-express": "^4.1.3",
    "@typescript-eslint/eslint-plugin": "^6.2.1",
    "@typescript-eslint/parser": "^6.2.1",
    "commander": "^11.0.0",
    "eslint": "^8.46.0",
    "husky": "^8.0.3",
    "jest": "29.6.2",
    "lint-staged": "^13.2.3",
    "prettier": "^3.0.0",
    "regenerator-runtime": "^0.14.1",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.1.6",
    "uglify-js": "^3.17.4"
  },
  "dependencies": {
    "@types/supertest": "^2.0.12",
    "app-root-path": "^3.1.0",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "dotenv-safe": "^8.2.0",
    "express": "^4.18.2",
    "joi": "^17.9.2",
    "jsonwebtoken": "^9.0.2",
    "knex": "^3.1.0",
    "morgan": "^1.10.0",
    "openapi-comment-parser": "^1.0.0",
    "pg": "^8.13.0",
    "swagger-ui-express": "^5.0.0",
    "yaml": "^2.3.1"
  },
  "scripts": {
    "start": "node build/index.js",
    "build": "tsc",
    "dev": "ts-node-dev --no-notify src/index.ts",
    "prepare": "husky install",
    "docker": "./scripts/docker",
    "coverage": "jest --coverage && xdg-open ./coverage/lcov-report/index.html &>/dev/null",
    "test": "jest",
    "watch": "jest --watch",
    "postbuild": "find build -iname \"*.js\" -exec pnpm uglifyjs {} --rename --toplevel --comments '/^\\*/' --output {} \\;",
    "prebuild": "rm -rf build",
    "format": "prettier --write 'src/**/*'",
    "lint": "eslint --max-warnings=0 'src/**/*'",
    "db:migrate-down": "knex --knexfile ./database/knexfile.js migrate:down",
    "db:migrate-latest": "knex --knexfile ./database/knexfile.js migrate:latest",
    "db:migrate-make": "knex --knexfile ./database/knexfile.js migrate:make",
    "db:migrate-rollback": "knex --knexfile ./database/knexfile.js migrate:rollback",
    "db:migrate-up": "knex --knexfile ./database/knexfile.js migrate:up",
    "docker:up:dbs": "docker compose up -d disk-plus-api-postgres",
    "docker:down:dbs": "docker compose down disk-plus-api-postgres"
  },
  "lint-staged": {
    "*.{js,ts,json}": [
      "prettier --check"
    ],
    "*.ts": [
      "eslint --max-warnings=0"
    ]
  }
}
